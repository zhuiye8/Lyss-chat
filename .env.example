# === Lyss AI Platform 环境配置 ===
# 复制此文件为 .env 并修改相应配置

# === 基础配置 ===
ENV=development
DEBUG=true
LOG_LEVEL=debug

# === 数据库配置 ===
DB_HOST=localhost
DB_PORT=5432
DB_USER=lyss
DB_PASSWORD=lyss123
DB_NAME=lyss_platform

# === Redis 配置 ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# === ClickHouse 配置 ===
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DB=lyss_analytics

# === 服务发现配置 ===
CONSUL_HOST=localhost
CONSUL_PORT=8500

# === 向量数据库配置 ===
QDRANT_HOST=localhost
QDRANT_PORT=6333

# === AI 服务配置 ===
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-key-here
AZURE_OPENAI_API_VERSION=2023-12-01-preview

ANTHROPIC_API_KEY=sk-ant-your-claude-key-here

ALIYUN_DASH_SCOPE_API_KEY=sk-your-aliyun-key-here

# === 记忆服务配置 ===
MEM0_API_KEY=your-mem0-key-here
MEM0_BASE_URL=http://localhost:8080

# === JWT 配置 ===
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# === 服务端口配置 ===
GATEWAY_PORT=8000
USER_SERVICE_PORT=8001
AUTH_SERVICE_PORT=8002
GROUP_SERVICE_PORT=8003
CREDENTIAL_SERVICE_PORT=8004
BILLING_SERVICE_PORT=8005

# === 前端配置 ===
FRONTEND_PORT=5173
API_BASE_URL=http://localhost:8000/api/v1

# === 监控配置 (可选) ===
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# === 开发配置 ===
HOT_RELOAD=true
API_CORS_ORIGINS=http://localhost:3000,http://localhost:5173
ENABLE_SWAGGER=true
ENABLE_PPROF=true

# === 安全配置 ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s

# === 日志配置 ===
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=logs/app.log

# === 缓存配置 ===
CACHE_TTL=3600
CACHE_PREFIX=lyss:

# === 文件存储配置 ===
UPLOAD_MAX_SIZE=10MB
UPLOAD_PATH=uploads/
STATIC_PATH=static/