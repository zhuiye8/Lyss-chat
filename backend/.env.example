# LYSS AI Platform Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# === Application Settings ===
PROJECT_NAME="LYSS AI Platform"
VERSION="0.1.0"
ENVIRONMENT=development
DEBUG=true

# === Security ===
# Generate with: openssl rand -base64 48
SECRET_KEY=your_secret_key_here_minimum_32_characters
AUTH_SECRET=your_auth_secret_here_minimum_32_characters
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your_32_character_encryption_key_here

# === Database Configuration ===
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=lyss
POSTGRES_PASSWORD=your_db_password_here
POSTGRES_DB=lyss_db
# Optional: Full database URL (overrides individual settings above)
# DATABASE_URL=postgresql+asyncpg://lyss:password@localhost:5432/lyss_db

# === Redis Configuration ===
REDIS_URL=redis://localhost:6379

# === Vector Database (Qdrant) ===
QDRANT_URL=http://localhost:6333

# === Mem0 Configuration ===
# Global LLM and Embedding models for memory processing
MEM0_LLM_PROVIDER=openai
MEM0_LLM_MODEL=gpt-4o-mini
MEM0_EMBEDDING_MODEL=text-embedding-3-small
MEM0_PROVIDER_API_KEY=sk-your_openai_api_key_for_mem0
MEM0_PROVIDER_BASE_URL=https://api.openai.com/v1

# === File Upload Configuration ===
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,docx,txt,md
UPLOAD_DIR=/tmp/uploads

# === CORS Configuration ===
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8001

# === Logging ===
LOG_LEVEL=INFO
# LOG_FILE=/var/log/lyss/app.log

# === Initial Admin User ===
FIRST_SUPERUSER=admin@lyss.ai
FIRST_SUPERUSER_PASSWORD=changeme_in_production

# === Token Configuration ===
ACCESS_TOKEN_EXPIRE_MINUTES=480  # 8 hours
REFRESH_TOKEN_EXPIRE_MINUTES=43200  # 30 days